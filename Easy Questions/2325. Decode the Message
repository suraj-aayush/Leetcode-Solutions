

class Solution {
public:
    string decodeMessage(string key, string message) {
        unordered_map<char,char> m;
        char ch='a';

        for(auto &c: key)
        {
            if(c==' ')
            continue;

            if(!m.count(c))
            {
                m[c] = ch++;
                
            }
        }

        for(auto c: message)
        {
            if(m.count(c))
            c=m[c];
        }
       return message;
    }
};
