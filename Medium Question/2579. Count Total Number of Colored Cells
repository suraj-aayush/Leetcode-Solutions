class Solution {
public:
    long long coloredCells(int n) {
        if(n==1) return 1;
long long sum = 1;
        for(int i=1;i<n;i++)
        {
            sum += (long long)(i*4);
        }

        return sum;
/*
    1-> 1 
    2-> 5 -> 1 + 4
    3-> 13-> 1 + 4 + 8
    4-> 25  -> 1 + 4 + 8 + 12
*/

    }
};
